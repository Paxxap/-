<?php 
$N = 11;
$M = $N * 2 + 1;
$simple = 0;
$chek = true;
$simple2 = 0;
for ($i = $N; $i <= $M; $i++)
{
	$flag = true;
	for ($j = 2; $j <= $i/2; $j++)
	{
		if($i % $j == 0)
		{
			$flag = false;
		}
	}
	if ($chek == true && $flag == true)
	{
		$simple = $i;
		$chek = false;
	}
	if ($chek == false && $flag == true && $simple != 0)
	{
		$simple2 = $i;
		if ($simple2 - $simple == 2)
		{
			echo "$simple2 -- $simple -> близнецы\n";
			$simple = $simple2;
		}
		else 
		{
			$simple = $simple2;
		}
	}
}

?>
