<?php
$N = 1; 
$M = 350;
$max_sum = 0; 
$max_num = 0;
$div = 0;
for ($i = $N; $i <= $M; $i++)
{
	$div_sum = 0;
	for ($j = 1; $j <= $i/2; $j++ )
	{
		if ($i % $j == 0)
		{
			$flag = true;
			for ($q = 2; $q <= $j/2; $q++)
			{
				if ($j % $q == 0)
				{
					$flag = false;
				}
			}
			if ($flag) {$div_sum += $j;}
		}
	}
	if ($div_sum == 1) { $div_sum += $i;}
	if ($div_sum > $max_sum)
	{
		$max_sum = $div_sum;
		$max_num = $i;
	}
}
echo "Число с наибольшей суммой простых делителей - $max_num"."<br>";
echo "Наибольшая сумма простых делителей - $max_sum";
?>
