<?php 
for ($i = 1000; $i < 10000; $i++)
{
	if ($i % 2 == 0)
	{
		$unit = floor(($i % 100) % 10);
		$tenths = floor(($i % 100) / 10);
		$hundredths = floor(($i % 1000) / 100);
		$thousandth = floor($i / 1000);

		if ( ($thousandth < $hundredths && $hundredths < $tenths && $tenths < $unit) or ($thousandth > $hundredths && $hundredths > $tenths && $tenths > $unit))
		{
			echo $i."\n";
		}
	}
}
?>
