<?php 
$number = 2365;

$unit = floor(($number % 100) % 10);
$tenths = floor(($number % 100) / 10);
$hundredths = floor(($number % 1000) / 100);
$thousandth = floor($number / 1000);

$new_number = $unit * 1000 + $tenths * 100 + $hundredths * 10 + $thousandth;
echo "Исходное число: $number"."\n"."Полученное число: $new_number";
?>
