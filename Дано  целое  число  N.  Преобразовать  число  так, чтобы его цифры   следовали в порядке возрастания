<?php
$num = 891;
$sort_num = 0;
for ( $i = 1; $i<=9; $i++)
{
   $tmp = $num;
    while ($tmp >= 1)
    {
        $digit = $tmp % 10;             
        if ($digit == $i)
        {
            $sort_num *= 10;
            $sort_num += $digit;
        }
        $tmp /= 10;                
    }               
}
echo $sort_num;
?>
