<?php 
$N = 5399;
$t = $N;
$chek = true;
while ($t >= 1)
{
	$num = $t % 10;
	$t /= 10;
	$a = $t;
	while ($a >= 1)
	{
		if ($num == $a % 10)
		{
			$chek = false;
			$t = 0;
			break;
		}
		$a /= 10;
	}
}
if ($chek == false)
{
	echo "$N -> есть повторяющиеся цифры";
}
else 
{
	echo "$N -> повторяющиеся цифры отсутствуют";
}
?>
