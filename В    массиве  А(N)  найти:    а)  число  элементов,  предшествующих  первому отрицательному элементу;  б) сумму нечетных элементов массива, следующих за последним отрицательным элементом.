<?php 
$arr = array(1, 23, -1, 24, -2, 3, 5, 10);
$negative = 0;
$count = 0;
$chek = true;
$sum = 0;
for ($i = 0; $i < count($arr); $i++)
{
	if($arr[$i] < 0)
	{
		$negative = $i;
		$chek = false;
	}
	elseif ($negative == 0) 
	{
		$count ++;
	}
}
for ($i = $negative+1; $i < count($arr); $i++)
{
	$sum += $arr[$i];
}
echo "$count - число положительных элементов до первого отрицательного";
echo "$sum - сумма элементов после последнего отрицательного";
?>
